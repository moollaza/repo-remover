{
  "version": 2,
  "name": "repo-remover",
  "alias": [
    "reporemover.xyz"
  ],
  "build": {
    "env": {
      "VUE_APP_FATHOM_HOSTNAME": "@fathom-hostname",
      "VUE_APP_FATHOM_SITE_ID": "@fathom-site-id"
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build"
    }
  ],
  "routes": [
    {
      "src": "^/js/(.*)",
      "dest": "/js/$1"
    },
    {
      "src": "^/css/(.*)",
      "dest": "/css/$1"
    },
    {
      "src": "^/img/(.*)",
      "dest": "/img/$1"
    },
    {
      "src": "^/fonts/(.*)",
      "dest": "/fonts/$1"
    },
    {
      "src": "^/(.+\\.(?:png|ico|webmanifest))",
      "dest": "/$1"
    },
    {
      "src": "/robots.txt",
      "dest": "/robots.txt"
    },
    {
      "src": ".*",
      "dest": "/index.html"
    }
  ]
}
